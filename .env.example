# Application Settings
APP_NAME=Ramayana Sustainability Training
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=True

# Server Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
FRONTEND_PORT=8501

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ramayana_training
DB_USER=postgres
DB_PASSWORD=your_password_here

# AWS RDS (Production)
AWS_RDS_ENDPOINT=your-rds-endpoint.region.rds.amazonaws.com
AWS_RDS_PORT=5432
AWS_RDS_DB_NAME=ramayana_training
AWS_RDS_USER=admin
AWS_RDS_PASSWORD=your_rds_password

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_S3_BUCKET=ramayana-training-assets

# AWS Cognito (Authentication)
COGNITO_USER_POOL_ID=your_user_pool_id
COGNITO_CLIENT_ID=your_client_id
COGNITO_CLIENT_SECRET=your_client_secret

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=500

# AWS Bedrock (Alternative to OpenAI)
USE_AWS_BEDROCK=False
BEDROCK_MODEL_ID=anthropic.claude-v2

# Security
SECRET_KEY=your-secret-key-min-32-characters-long-change-this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@ramayana-training.com

# Frontend Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# Session Configuration
SESSION_SECRET_KEY=another-secret-key-for-sessions

# File Upload Configuration
MAX_UPLOAD_SIZE_MB=10
ALLOWED_FILE_TYPES=pdf,docx,pptx,mp4,mp3

# Analytics
ENABLE_ANALYTICS=True
ANALYTICS_RETENTION_DAYS=365

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Cache Configuration
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# Feature Flags
ENABLE_CHATBOT=True
ENABLE_SIMULATIONS=True
ENABLE_GAMIFICATION=True
ENABLE_NOTIFICATIONS=True